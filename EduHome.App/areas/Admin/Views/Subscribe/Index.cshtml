@model IEnumerable<Subscribe>

<h2>Subscribers List</h2>

@if (Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscriber in Model)
            {
                <tr>
                    <td>@subscriber.Id</td>
                    <td>@subscriber.Email</td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = subscriber.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this subscriber?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No subscribers found.</p>
}

