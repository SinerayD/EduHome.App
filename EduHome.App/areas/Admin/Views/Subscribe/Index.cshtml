@model IEnumerable<Subscribe>

<<div class="container" style="margin-top: 100px">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscriber in Model)
            {
                <tr>
                    <th scope="row">@subscriber.Id</th>
                    <td>@subscriber.Email</td>
                    <td>
                        <a onclick="if (!confirm('Delete selected subscriber?')) { return false; }"
                       asp-controller="Subscribe" asp-action="Delete" asp-route-id="@subscriber.Id"
                       class="delete-item btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


