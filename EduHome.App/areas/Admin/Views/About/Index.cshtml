@model About

<div class="container"style="margin-top:100px">
    @if (Model != null)
    {
        <p>Title: @Model.Title</p>
        <p>Description: @Model.Description</p>
        <img src="~/images/abouts/@Model.Image" alt="About Image" style="max-width: 500px; max-height: 500px;" />
        <p>Link: @Model.Link</p>
    }
    else
    {
        <p>No About information available.</p>
    }
</div>

