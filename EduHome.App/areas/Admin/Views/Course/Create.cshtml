@model Course

<div class="container"style="margin-top:100px">
	<h2>Create Course</h2>
	<form method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label asp-for="@Model.Name">Course Name</label>
			<input type="text" class="form-control" asp-for="@Model.Name" />
			<span asp-validation-for="Name" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Description">Course Description</label>
			<input type="text" class="form-control" asp-for="@Model.Description" />
			<span asp-validation-for="Description" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.AboutCourse">About Course</label>
			<input type="text" class="form-control" asp-for="@Model.AboutCourse" />
			<span asp-validation-for="AboutCourse" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Apply">How To Apply</label>
			<input type="text" class="form-control" asp-for="@Model.Apply" />
			<span asp-validation-for="Apply" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Certification">Certificiation </label>
			<input type="text" class="form-control" asp-for="Certification" />
			<span asp-validation-for="Certification" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="StartDate">Start Date</label>
			<input class="form-control" asp-for="StartDate" />
			<span asp-validation-for="StartDate" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ClassDuration">Class Duration</label>
			<input class="form-control" asp-for="ClassDuration" />
			<span asp-validation-for="ClassDuration" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CourseDuration">Course Duration</label>
			<input class="form-control" asp-for="CourseDuration" />
			<span asp-validation-for="CourseDuration" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="SkillLevel">Skill Level</label>
			<input type="text" class="form-control" asp-for="SkillLevel" />
			<span asp-validation-for="SkillLevel" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="StudentCount">Student Count</label>
			<input class="form-control" asp-for="StudentCount" />
			<span asp-validation-for="StudentCount" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CourseFee">Course Fee</label>
			<input class="form-control" asp-for="CourseFee" />
			<span asp-validation-for="CourseFee" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CategoryIds">Course Categories</label>
			<select multiple asp-for="CategoryIds" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.Categories)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="CategoryIds" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="TagIds">Tags</label>
			<select multiple asp-for="TagIds" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.Tags)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="TagIds" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CourseLanguageId">Language</label>
			<select asp-for="CourseLanguageId" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.Courselanguages)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="CourseLanguageId" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.FormFile">Course Image</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile" />
			<span asp-validation-for="FormFile" class="text text-danger"></span>
		</div>
		@Html.AntiForgeryToken()
		<button style="background-color: #4CAF50; border: none;border-radius:10px;color: white;padding: 16px 32px;text-align: center;text-decoration: none;display: inline-block;font-size: 16px;margin: 4px 2px;transition-duration: 0.4s;cursor: pointer;margin-top:20px" type="submit">Create</button>
	</form>
</div>