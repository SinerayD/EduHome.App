@model Category
<div class="container" style="margin-top:100px">
    <form method="post">
        <div class="form-group">
            <label for="Name">Category Name</label>
            <span class="alert text-danger"></span>
            <input type="text" class="form-control"asp-for="@Model.Name">
            <span class="text text-danger"asp-validation-for="@Model.Name"></span>
            @Html.AntiForgeryToken()
        </div>

        <button type="submit" style="background-color: #4CAF50; border: none;border-radius:10px;color: white;padding: 16px 32px;text-align: center;text-decoration: none;display: inline-block;font-size: 16px;margin: 4px 2px;transition-duration: 0.4s;cursor: pointer;margin-top:20px" type="submit">Update</button>
    </form>
</div>
