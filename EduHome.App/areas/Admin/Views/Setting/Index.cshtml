@model  IEnumerable<Setting>
<div class="container"style="margin-top:100px">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">About Title</th>
                <th scope="col">About Text</th>
                <th scope="col">Link</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Header Logo</th>
                <th scope="col">Footer Logo</th>
                <th scope="col">About Image</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.AboutTitle</th>
                    <th>@item.AboutText</th>
                    <th>@item.VideoLink</th>
                    <th>@item.PhoneNumber</th>
                    <th>@item.Email</th>
                    <th>@item.Address</th>
                    <th><img style="width:70px;height:70px;object-fit:cover;" src="/assets/img/about/@item.AboutImage" /></th>
                    <th><img style="width:100px;height:100px" src="assets/img/logo/@item.HeaderLogo" /></th>
                    <th><img style="width:100px;height:100px" src="assets/img/logo/@item.FooterLogo" /></th>
                    <td>
                        <a asp-controller="setting" asp-action="update" asp-route-id="@item.Id">
                            <i class="fas fa-edit text text-primary"></i>
                        </a>
                    </td>
                    <td>
                        <a onclick="if(!confirm('Are you sure?')){return false;}"
                       asp-controller="setting" asp-action="remove" asp-route-id="@item.Id"
                       class=" delete-item"><i class="fas fa-trash text text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="setting" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%" a>
            <div style="width:100%; " class="btn btn-outline-success">Create Setting </div>
        </a>
    </div>
</div>