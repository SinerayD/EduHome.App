@model Teacher

<div class="container" style="margin-top:200px">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input class="form-control" asp-for="FullName">
            <span class="text text-danger" asp-validation-for="FullName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title">
            <span class="text text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <select asp-for="PositionId" class="form-select" aria-label="Choose position">
                <option selected>Choose position</option>
                @foreach (var item in ViewBag.Positions)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <span class="text text-danger" asp-validation-for="PositionId"></span>
        </div>
        <div class="form-group">
            <label asp-for="FormFile"></label>
            <input accept="image/*" type="file" class="form-control" asp-for="FormFile">
            <span class="text text-danger" asp-validation-for="FormFile"></span>
        </div>
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

