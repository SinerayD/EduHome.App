@model Teacher
<div class="container"style="margin-top:100px">
	<form method="post" enctype="multipart/form-data">
		<div class="text text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group">
			<label asp-for="@Model.FullName">Name:</label>
			<input type="text" class="form-control" asp-for="@Model.FullName" />
			<span asp-validation-for="FullName" class="text text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="AboutMe">About:</label>
			<input class="form-control" asp-for="AboutMe" />
			<span asp-validation-for="AboutMe" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="DegreeId">Degree</label>
			<select asp-for="DegreeId" class="form-select" aria-label="Default select example">
				<option value="0" selected">Select one of them</option>
				@foreach (var item in ViewBag.Degrees)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="DegreeId" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PositionId">Position</label>
			<select asp-for="PositionId" class="form-select" aria-label="Default select example">
				<option value="0" selected">Select one of them</option>
				@foreach (var item in ViewBag.Positions)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="PositionId" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Experience">ExperienceYear</label>
			<input class="form-control" asp-for="Experience" />
			<span asp-validation-for="Experience" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="HobbyIds">Hobbies</label>
			<select multiple asp-for="HobbyIds" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.Hobbies)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="HobbyIds" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Faculty">Faculty:</label>
			<input type="text" class="form-control" asp-for="Faculty" />
			<span asp-validation-for="Faculty" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Mail">Mail:</label>
			<input class="form-control" asp-for="Mail" />
			<span asp-validation-for="Mail" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PhoneNumber">Phone Number:</label>
			<input class="form-control" asp-for="PhoneNumber" />
			<span asp-validation-for="PhoneNumber" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Skype">Skype:</label>
			<input class="form-control" asp-for="Skype" />
			<span asp-validation-for="Skype" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.FormFile">File:</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile" />
			<span asp-validation-for="FormFile" class="text text-danger"></span>
		</div>
		@Html.AntiForgeryToken()
			<button style="background-color: #4CAF50; border: none;border-radius:10px;color: white;padding: 16px 32px;text-align: center;text-decoration: none;display: inline-block;font-size: 16px;margin: 4px 2px;transition-duration: 0.4s;cursor: pointer;margin-top:20px" type="submit">Update</button>

	</form>
</div>