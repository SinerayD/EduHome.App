@model Teacher
<div class="container" style="margin-top:100px">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" asp-for="@Model.FullName">
            <span class="text text-danger" asp-validation-for="@Model.FullName"></span>
            @Html.AntiForgeryToken()
        </div>

        <div class="form-group">
            <label for="Mail">Mail</label>
            <input type="text" class="form-control" asp-for="@Model.Mail">
            <span class="text text-danger" asp-validation-for="@Model.Mail"></span>
            @Html.AntiForgeryToken()
        </div>

        <div class="form-group">
            <label for="ExperienceYear">ExperienceYear</label>
            <input type="text" class="form-control" asp-for="@Model.Experience">
            <span class="text text-danger" asp-validation-for="@Model.Experience"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label for="aboutme">AboutMe</label>
            <input type="text" class="form-control" asp-for="@Model.AboutMe">
            <span class="text text-danger" asp-validation-for="@Model.AboutMe"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label for="Skype">Skype</label>
            <input type="text" class="form-control" asp-for="@Model.Skype">
            <span class="text text-danger" asp-validation-for="@Model.Skype"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label for="phonenumber">Phone Number</label>
            <input type="text" class="form-control" asp-for="@Model.PhoneNumber">
            <span class="text text-danger" asp-validation-for="@Model.PhoneNumber"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label for="Faculty">Faculty</label>
            <input type="text" class="form-control" asp-for="@Model.Faculty">
            <span class="text text-danger" asp-validation-for="@Model.Faculty"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label asp-for="FormFile"></label>
            <input accept="image/*" type="file" class="form-control" asp-for="FormFile">
            <span class="text text-danger" asp-validation-for="FormFile"></span>
        </div>
        <div class="form-group">
            <select asp-for="PositionId" class="form-select" aria-label="Disabled select example">
                <option value="0">Choose Position</option>
                @foreach (var item in ViewBag.Position)
                {

                    <option value="@item.Id">@item.Name</option>

                }
            </select>
            <span class="text text-danger" asp-validation-for="PositionId"></span>
        </div>
        <div class="form-group">
            <select asp-for="DegreeId" class="form-select" aria-label="Disabled select example">
                <option value="0">Choose Degree</option>
                @foreach (var item in ViewBag.Degree)
                {

                    <option value="@item.Id">@item.Name</option>

                }
            </select>
            <span class="text text-danger" asp-validation-for="DegreeId"></span>
        </div>

        <div class="form-group">
            <label asp-for="HobbyIds">Hobbies</label>
            <select multiple asp-for="HobbyIds" class="form-select" aria-label="Default select example">
                @foreach (var item in ViewBag.Hobbies)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <span asp-validation-for="HobbyIds" class="text text-danger"></span>
        </div>
        <button style="background-color:lightseagreen" type="submit">Create</button>
    </form>
</div>

