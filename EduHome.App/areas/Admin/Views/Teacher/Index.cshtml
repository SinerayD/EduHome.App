@model IEnumerable<Teacher>
<div class="container" style="margin-top:100px">
    <table class="table table-lg">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Fullname:</th>
                <th scope="col">Position</th>
                <th scope="col">Degree</th>
                <th scope="col">Image</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.FullName</th>
                    <th>@item.Position.Name</th>
                    <th>@item.Degree.Name</th>
                    <th><img style="width:70px;height:70px;object-fit:cover;" src="~/assets/img/teacher/@item.Image" /></th>
                    <td><a asp-controller="teacher" asp-action="update" asp-route-id="@item.Id"><i class="fas fa-edit text text-primary"></i></a></td>
                    <td><a onclick="if (!confirm('Delete selected item?')){return false;}" asp-controller="teacher" asp-action="Delete" asp-route-id="@item.Id" class=" delete-item"><i class="fas fa-trash text text-danger"></i></a></td>
                </tr>
            }

        </tbody>
    </table>
    <div>
        <a asp-controller="teacher" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%"> <div style="width:100%; " class="btn btn-outline-success">Create Teacher </div></a>
    </div>

</div>
