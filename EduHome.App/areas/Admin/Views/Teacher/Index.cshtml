@model IEnumerable<Teacher>

<div class="container" style="margin-top: 200px">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Full Name</th>
                <th scope="col">Position</th>
                <th scope="col">Degree</th>
                <th scope="col">Hobbies</th>
                <th scope="col">Skills</th>
                <th scope="col">Socials</th>
                <th scope="col">Faculty</th>
                <th scope="col">Mail</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Skype</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td><img style="width: 70px; height: 70px; object-fit: cover;" src="~/images/teachers/@item.Image" /></td>
                    <td>@item.FullName</td>
                    <td>@item.Position?.Name</td>
                    <td>@item.Degree?.Name</td>
                    <td>
                        @foreach (var hobby in item.TeacherHobbies)
                        {
                            <span>@hobby.Hobby?.Name</span>
                            if (hobby != item.TeacherHobbies.Last())
                            {
                                <span>, </span>
                            }
                        }
                    </td>
                    <td>
                        @foreach (var skill in item.Skills)
                        {
                            <span>@skill.Name</span>
                            if (skill != item.Skills.Last())
                            {
                                <span>, </span>
                            }
                        }
                    </td>
                    <td>
                        @foreach (var social in item.Socials)
                        {
                            <span>@social.Name</span>
                            if (social != item.Socials.Last())
                            {
                                <span>, </span>
                            }
                        }
                    </td>
                    <td>@item.Faculty</td>
                    <td>@item.Mail</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Skype</td>
                    <td>
                        <a asp-controller="Teacher" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa-edit text-primary"></i>
                        </a>
                    </td>
                    <td>
                        <a onclick="if (!confirm('Delete selected item?')){return false;}"
                       asp-controller="Teacher" asp-action="Delete" asp-route-id="@item.Id"
                       class="delete-item">
                            <i class="fas fa-trash text-danger"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="Teacher" asp-action="Create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%">
            <div style="width: 100%;" class="btn btn-outline-success">Create Teacher</div>
        </a>
    </div>
</div>
