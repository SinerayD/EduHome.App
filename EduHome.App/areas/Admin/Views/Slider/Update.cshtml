@model Slider
<div class="container" style="margin-top:100px">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input type="text" class="form-control" asp-for="Title">
            <span class="text text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Text"></label>
            <input type="text" class="form-control" asp-for="Text">
            <span class="text text-danger" asp-validation-for="Text"></span>
        </div>
        <div class="form-group">
            <label asp-for="Link"></label>
            <input type="text" class="form-control" asp-for="Link">
            <span class="text text-danger" asp-validation-for="Link"></span>
        </div>
        <div class="form-group">
            <label asp-for="FormFile"></label>
            <input accept="image/*" type="file" class="form-control" asp-for="FormFile">
            <span class="text text-danger" asp-validation-for="FormFile"></span>
        </div>
        <img style="width:200px;height:200px;" src="img/slider/@Model.Image" />
        @Html.AntiForgeryToken()
        <button style="background-color: #4CAF50; border: none;border-radius:10px;color: white;padding: 16px 32px;text-align: center;text-decoration: none;display: inline-block;font-size: 16px;margin: 4px 2px;transition-duration: 0.4s;cursor: pointer;margin-top:20px" type="submit">Update</button>
    </form>
</div>