@model Social
<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
            <span class="text text-danger" asp-validation-for="@Model.Name"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label for="link">Link</label>
            <input type="text" class="form-control" asp-for="@Model.Link">
            <span class="text text-danger" asp-validation-for="@Model.Link"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <select asp-for="TeacherId" class="form-select" aria-label="Disabled select example">
                <option value="0">Choose Position</option>
                @foreach (var item in ViewBag.Teacher)
                {

                    <option value="@item.Id">@item.Name</option>

                }
            </select>
            <span class="text text-danger" asp-validation-for="TeacherId"></span>
        </div>

        <button style="background-color:lightseagreen" type="submit">Update</button>
    </form>
</div>