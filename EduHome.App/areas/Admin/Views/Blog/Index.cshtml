@model IEnumerable<Blog>

<div class="container" style="margin-top: 200px">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Publish Date</th>
                <th scope="col">Comment Count</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td><img style="width: 70px; height: 70px; object-fit: cover;" src="@item.Image" /></td>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.PublishDate.ToShortDateString()</td>
                    <td>@item.CommentCount</td>
                    <td>
                        <a asp-controller="Blog" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit text-primary"></i>
                        </a>
                        <a onclick="if (!confirm('Delete selected item?')){return false;}"
                       asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id"
                       class="delete-item">
                            <i class="fas fa-trash text-danger"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="Blog" asp-action="Create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%">
            <div style="width: 100%;" class="btn btn-outline-success">Create Blog</div>
        </a>
    </div>
</div>

