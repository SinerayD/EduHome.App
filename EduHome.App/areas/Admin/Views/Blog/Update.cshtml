@model Blog

<div class="container" style="margin-top:100px">
	<form method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label asp-for="@Model.Title">Title:</label>
			<input type="text" class="form-control" asp-for="@Model.Title" />
			<span asp-validation-for="Title" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Description">Description:</label>
			<input type="text" class="form-control" asp-for="@Model.Description" />
			<span asp-validation-for="Description" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Author">Author:</label>
			<input type="text" class="form-control" asp-for="@Model.Author" />
			<span asp-validation-for="Author" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CategoryIds">Categories</label>
			<select multiple asp-for="CategoryIds" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.Categories)
				{
					if (Model.BlogCategories.Any(x => x.CategoryId == item.Id))
					{
						<option selected value="@item.Id">@item.Name</option>
					}
					else
					{
						<option value="@item.Id">@item.Name</option>
					}
				}
			</select>
			<span asp-validation-for="CategoryIds" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="TagIds">Tags</label>
			<select multiple asp-for="TagIds" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.Tags)
				{
					if (Model.BlogTags.Any(x => x.TagId == item.Id))
					{
						<option selected value="@item.Id">@item.Name</option>
					}
					else
					{
						<option value="@item.Id">@item.Name</option>
					}
				}
			</select>
			<span asp-validation-for="TagIds" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.FormFile">Image</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile" />
			<span asp-validation-for="FormFile" class="text text-danger"></span>
		</div>
		@Html.AntiForgeryToken()
		<button style="background-color: #4CAF50; border: none;border-radius:10px;color: white;padding: 16px 32px;text-align: center;text-decoration: none;display: inline-block;font-size: 16px;margin: 4px 2px;transition-duration: 0.4s;cursor: pointer;margin-top:20px" type="submit">Update</button>
	</form>
</div>
